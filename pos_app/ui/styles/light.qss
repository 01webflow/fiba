/* Light theme */
QWidget { color: #222; background: #f7f9fc; font-family: 'Segoe UI', 'Inter', sans-serif; }
QPushButton { background: qlineargradient(x1:0,y1:0,x2:1,y2:1, stop:0 #7bdaf3, stop:1 #4ea7f5); color: white; border: none; padding: 8px 14px; border-radius: 8px; }
QPushButton:hover { filter: brightness(1.1); }
QLineEdit, QComboBox, QSpinBox, QDoubleSpinBox, QDateEdit { background: #fff; border: 1px solid #dbe2ea; border-radius: 8px; padding: 6px 8px; }
QTableView { background: #fff; border: 1px solid #e5ecf3; gridline-color: #eef2f7; }
QHeaderView::section { background: #eef4fb; border: none; padding: 6px; }