/* Glassmorphism theme */
QWidget { color: #eaf6ff; background: #0b1220; font-family: 'Segoe UI', 'Inter', sans-serif; }
QMainWindow { background: transparent; }
QFrame#GlassCard, QWidget#GlassCard { background: rgba(255, 255, 255, 0.08); border: 1px solid rgba(255,255,255,0.12); border-radius: 16px; }
QPushButton { background: qlineargradient(x1:0,y1:0,x2:1,y2:1, stop:0 #6bdcff, stop:1 #7a5bff); color: white; border: none; padding: 10px 16px; border-radius: 10px; }
QPushButton:hover { background: qlineargradient(x1:0,y1:0,x2:1,y2:1, stop:0 #7be7ff, stop:1 #8f77ff); }
QLineEdit, QComboBox, QSpinBox, QDoubleSpinBox, QDateEdit { background: rgba(255,255,255,0.08); border: 1px solid rgba(255,255,255,0.18); border-radius: 10px; padding: 8px 10px; color: #eaf6ff; }
QTableView { background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.15); gridline-color: rgba(255,255,255,0.15); }
QHeaderView::section { background: rgba(255,255,255,0.1); border: none; padding: 8px; }